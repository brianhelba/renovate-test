{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  // EXPERIMENT 2: rangeStrategy "bump"
  // Questions:
  //   - Does "click>=7" become "click>=8.1.8" (or whatever latest is)?
  //   - Does "django>=4.2,<5" bump to "django>=4.2.20,<5" (or similar)?
  //   - How are == pinned deps handled (same as other strategies)?
  //   - Test matchDepTypes targeting
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      // Test matchDepTypes: does this correctly match dependency-groups?
      "matchDepTypes": ["dependency-groups"],
      "addLabels": ["dep-group-match"]
    },
    {
      // Test matchDepTypes: does this correctly match optional-dependencies?
      "matchDepTypes": ["project.optional-dependencies"],
      "addLabels": ["optional-dep-match"]
    },
    {
      "matchManagers": ["pyenv"],
      "groupSlug": "python-version",
      "groupName": ".python-version",
      "versioning": "docker"
    }
  ]
}
