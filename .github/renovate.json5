{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      // make a separate group for the .python-version file
      "matchManagers": [
        "pyenv"
      ],
      "groupSlug": "python-version",
      "groupName": ".python-version file",
      "commitMessageTopic": ".python-version file",
      // "docker" versioning preserves the precision of the version specifier
      "versioning": "docker"
    }
  ]
}
