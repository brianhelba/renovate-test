{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  // EXPERIMENT 4: rangeStrategy "replace" + separateMultipleMajor
  // Questions:
  //   - Does "django>=4.2,<5" become "django>=5.0,<6" for Django 5.x?
  //   - Does "click>=7" stay unchanged (already in range) or replace?
  //   - Does separateMultipleMajor create individual PRs for each major?
  //   - How are == pins handled with replace?
  "rangeStrategy": "replace",
  "separateMultipleMajor": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchManagers": ["pyenv"],
      "groupSlug": "python-version",
      "groupName": ".python-version",
      "versioning": "docker"
    }
  ]
}
