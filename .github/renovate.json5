{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  // EXPERIMENT 1: rangeStrategy "update-lockfile"
  // Questions:
  //   - Does "httpx" (bare dep) get skipped?
  //   - Do >= ranges get lock-only PRs (no pyproject.toml changes)?
  //   - Does bounded range "django>=4.2,<5" get lock-only PRs for 4.x updates?
  //   - Does "build-system.requires" get tracked?
  //   - Does "requires-python" get update proposals?
  //   - Does lockFileMaintenance overlap with update-lockfile PRs?
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchManagers": ["pyenv"],
      "groupSlug": "python-version",
      "groupName": ".python-version",
      "versioning": "docker"
    }
  ]
}
